.header{
  width: 750rpx;
  height: 90rpx;
}

  .hdCon{
  display: flex;
  justify-content: space-between;align-items: center;
  height: 100%;
}  

.hdCon navigator,.hdCon .kefu{ height: 60rpx;}
.hdCon image{ height: 100%;} 

.kefu{position: relative; animation: dh linear 1s infinite alternate;}
.kefu .btn{
  position: absolute;width: 100%; height: 100%; top: 0; left: 0; opacity: 0; 
}

.app_info_wrap{
  margin-top: 30rpx;
  background-color: #f4f4f4;
  font-size: 30rpx;

}

.app_info_wrap .app_info_item{
  padding: 20rpx;
  border-bottom: 5rpx solid #fff;
}
.app_info_wrap .app_info_contact{
  display: flex;
  justify-content: space-between;
}
.app_info_wrap text{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.recommend_wrap{
  margin-top: 30rpx;
  background-color: #f4f4f4;
  padding: 20rpx;
}

.footer{
  padding: 50rpx 0;
  background-color: #f2f2f2;
  text-align: center;
}
.footer .pic{
  width: 100rpx;
}

.footer .text{
  font-size: 25rpx;
  color:#666 ;
}